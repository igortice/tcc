.panel.panel-default
  .panel-heading
    %h2 Show article
  .panel-body
    %p
      %b Title:
      = @article.title
    %p
      %b Text:
      = @article.text

    %h2 Comments
    = render @article.comments

    %hr

    %h4 Add a comment:
    = render partial: 'comments/form'

  .panel-footer
    = link_to 'Edit', edit_article_path(@article)
    \|
    = link_to 'Back', articles_path
