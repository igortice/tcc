.panel.panel-default
  .panel-heading
    %h2 Listing articles
  .panel-body
    %table.table
      %thead
        %tr
          %th Title
          %th Text
          %th Actions

      %tbody
        - @articles.each do |article|
          %tr
            %td= article.title
            %td= article.text
            %td
              = link_to 'Show', article
              = link_to 'Edit', edit_article_path(article)
              = link_to 'Destroy', article, :method => :delete, :data => { :confirm => 'Are you sure?' }
  .panel-footer
    = link_to 'New Article', new_article_path
